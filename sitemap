// Common
homepage          : @(Главная)             --> /
posts             : @(Обзоры товаров)      --> @(/blog/)                 --> homepage
post              : @(Обзор)               --> @(/blog/{0}/)             --> posts
notices           : @(Новости)             --> @(/notices/)              --> homepage

// Admin area
admin             : @(Admin)               --> @(/admin/*)

// Eshop
checkout          : @(Оформление заказа)   --> @(/checkout/)            --> homepage
category          : @(Все товары)          --> @(/categories/*)         --> homepage
detail            : @(Подробнее о товаре)  --> @(/detail/{0}/)          --> category
top               : @(Лучшие)              --> @(/top/)                 --> homepage
new               : @(Новинки)             --> @(/new/)                 --> homepage
popular           : @(Популярные)          --> @(/popular/)             --> homepage
account           : @(Личный кабинет)      --> @(/account/)             --> homepage
order             : @(Детали заказа)       --> @(/checkout/{0}/)        --> account
settings          : @(Настройки)           --> @(/account/settings/)    --> account
logoff            : @(Выход)               --> @(/logoff/)              --> homepage
